<h2>Stylist: <%=@stylist.name %></h2>

<ul>
  <% @stylist.clients.each do |client| %>
    <li><%= client.name %></li>
  <% end %>
</ul>


<form action="/stylists/<%= @stylist.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Stylist</button>
</form>


<form action="/stylists/<%= @stylist.id %>" method="post">
  <div class="form-group">
    <input type="hidden" name="_method" value="patch">

    <label for='name'>Update stylist name:</label>
    <input type="text" name="name" class='form-control'>

    <label for="client_id">Select a client:</label>
    <select name="client_id">
      <% @clients.each do |client| %>
        <option value="<%= client.id %>"><%= client.name %></option>
      <% end %>
    </select>
  </div>
  <button class='btn btn-primary'>Update</button>
</form>
